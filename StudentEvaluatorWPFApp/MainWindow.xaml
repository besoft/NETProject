<Window x:Class="Zcu.StudentEvaluator.DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:Zcu.StudentEvaluator.View"
        
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:vmd="clr-namespace:Zcu.StudentEvaluator.DesignData;assembly=StudentEvaluatorCoreDesignData"
        mc:Ignorable="d" 
        
        Title="Student Evaluation App" Height="640" Width="800" ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Window.Resources>
        <vmd:DesignDataContext x:Key="DesignDataContext"/>
    </Window.Resources>
    <Grid 
        d:DataContext="{Binding Students, Mode=OneWay, Source={StaticResource DesignDataContext}}"
        >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <view:NotificationView x:Name="NtfView" Grid.Row="0" Visibility="Collapsed"/>
        <view:StudentListView x:Name="StdListView" Grid.Row="1"/>
    </Grid>
</Window>
